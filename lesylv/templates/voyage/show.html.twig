{% extends 'base.html.twig' %}

{% block title %}Voyages{% endblock %}

{% block body %}
    <h1>Voyages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voyage.id }}</td>
            </tr>
            <tr>
                <th>Nom planète</th>
                <td>{{ voyage.idPlanete.nom }}</td>
            </tr>
            <tr>
                <th>Nom véhicule</th>
                <td>{{ voyage.idVehicule.nom }}</td>
            </tr>
            <tr>
                <th>DateDepart</th>
                <td>{{ voyage.dateDepart ? voyage.dateDepart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateArrive</th>
                <td>{{ voyage.dateArrive ? voyage.dateArrive|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NombreVoyageur</th>
                <td>{{ voyage.nombreVoyageur }}</td>
            </tr>
            <tr>
                <th>Cout</th>
                <td>{{ voyage.cout }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('voyage_index') }}">Retour</a>

    <a href="{{ path('voyage_edit', {'id': voyage.id}) }}">Modifier</a>

    {{ include('voyage/_delete_form.html.twig') }}
{% endblock %}
